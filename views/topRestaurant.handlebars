<h1>人氣餐廳</h1>
<hr />
<div class="row" style="text-align: center;">
  {{#each restaurants}}
  <div class="col-8 mb-2 row">
    <div class="col-5">
      <a href="/users/{{this.id}}">
        <img class="" src="{{this.image}}" width="140px" height="140px">
      </a>
    </div>

    <div class="col-7">
      <h5>{{this.name}}</h5>
      <span class="badge badge-secondary">追蹤人數：{{this.votes}}</span>
      <p class="card-text">{{this.description}}</p>
      {{#if this.voted }}
      <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;" class="col-4">
        <a href="/restaurants/{{this.id}}" class="btn btn-primary col-4 me-1">Show</a>
        <button type="submit" class="btn btn-danger">移除最愛</button>
      </form>
      {{else}}
      <form action="/favorite/{{this.id}}" method="POST" style="display: contents;" class="col-4">
        <a href="/restaurants/{{this.id}}" class="btn btn-primary col-4 me-1">Show</a>
        <button type="submit" class="btn btn-primary">加入最愛</button>
      </form>
      {{/if}}
    </div>
  </div>
  {{/each}}
</div>